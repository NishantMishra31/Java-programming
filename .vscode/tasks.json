{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run Java with I/O",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "javac \"${file}\" && java -cp \"${fileDirname}\" ${fileBasenameNoExtension} < input.txt > output.txt && del \"${fileDirname}\\${fileBasenameNoExtension}.class\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
